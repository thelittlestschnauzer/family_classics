  <%= render 'shared/errors', object: @recipe %>

<%= form_for @recipe do |f| %>
  
  Select a Category for your recipe:
  <div class="field">
    <%= f.collection_select :category_id, Category.all, :id, :name %><br/> 
  </div>
  <div class="field">
    <%= f.label :title_of_recipe, class: "label" %>
    <%= f.text_field :title, class: "input" %>
  </div>
  <div class="field">
    <%= f.label :image, class: "label" %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :level, class: "label" %>
    <%= f.text_field :level, class: "input" %>
  </div>
  <div class="field">
    <%= f.label :serves, class: "label" %>
    <%= f.text_field :serves, class: "input" %>
  </div>

  <%= f.fields_for :ingredients do |i| %>
  <div class="field">
    <%= i.label :name_of_ingredient %>:
    <%= i.text_field :name, class: "input" %><br/>
    <%= i.fields_for :recipe_details do |r| %>
      <%= r.label :quantity, class: "label" %>
      <%= r.text_field :quantity, class: "input" %><br/>
    <% end %>
  <% end %>
  <br/>
  <div class="field">
    <%= f.submit class: "button active-button" %>
  </div>
<% end %>