  <%= render 'shared/errors', object: @recipe %>

<%= form_for @recipe do |f| %>
  
  Select a Category for your recipe:
  <div class="field">
    <%= f.collection_select :category_id, Category.all, :id, :name %><br/> 
  </div>
  <div class="field">
    <%= f.label :title_of_recipe, class: "label" %>
    <%= f.text_field :title, class: "input" %>
  </div>
  <div class="field">
    <%= f.label :image, class: "label" %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :level, class: "label" %>
    <%= f.text_field :level, class: "input" %>
  </div>
  <div class="field">
    <%= f.label :serves, class: "label" %>
    <%= f.text_field :serves, class: "input" %>
  </div>

  <%= f.fields_for :ingredients do |ingredient| %>
    <%= render 'ingredient_fields', f: ingredient %>
  <div class="links">
    <%= link_to_add_association 'add ingredient', f, :ingredients, class: "button" %>
  </div>
  
    <%= ingredient.fields_for :recipe_details do |recipe_detail| %>
      <%= recipe_detail.label :quantity, class: "label" %>
      <%= recipe_detail.text_field :quantity, class: "input" %><br/>
    <% end %>
  <% end %>
  <br/>
  <div class="field">
    <%= f.submit class: "button active-button" %>
  </div>
<% end %>